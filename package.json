{
  "name": "sparky",
  "author": "Deepak S (Alchemist)",
  "version": "1.0.0",
  "description": "Smart AI assistant for your daily use",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run dev:renderer\" \"NODE_ENV=development electron .\"",
    "dev:renderer": "vite",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/main/index.js --external:better-sqlite3 --external:electron",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/preload/index.js --external:electron",
    "build": "npm run build:main && npm run build:preload && vite build",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.sparky.app",
    "productName": "Sparky",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png"
    },
    "asar": true
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.292.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}